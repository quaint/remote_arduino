<h1>Listing devices</h1>
<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>
<table>
  <tr>
    <th>Name</th>
<!--
    <th>Description</th>
    <th>Image url</th>
-->
		<th>Port</th>
		<th>Board</th>
		<th>Kind</th>
		<th>Setting</th>
		<th>State</th>
    <th></th>
    <th></th>
    <th></th>
		<th></th>
  </tr>

<% @devices.each do |device| %>
  <tr>
    <td><%= device.name %></td>
<!--
    <td><%= device.description %></td>
    <td><%= device.image_url %></td>
-->
		<td><%= device.port %></td>
		<td><%= link_to device.board.name, device.board if device.board %></td>
		<td><%= device.readable_kind %></td>
		<td><%= device.setting %></td>
		<td><%= device.working if device.kind == Device::KINDS[:relay] %></td>
		<td><%= button_to "Toggle", :action => "toggle", :id => device.id if device.kind == Device::KINDS[:relay] %></td>
    <td><%= link_to 'Show', device %></td>
    <td><%= link_to 'Edit', edit_device_path(device) %></td>
    <td><%= link_to 'Destroy', device, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Device', new_device_path %>
